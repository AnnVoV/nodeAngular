@import 'comm/pub.styl'

body
    background #fff

.m-container
    width 960px
    margin 0px auto
    margin-top 80px


.m-item
    margin-top 30px
    a 
        text-decoration none
        cursor pointer
    img
        width 200px
        height 120px
    .title,.desc
        font-size 12px
    .desc
        color gray
    
    .price
        color orangered
        font-weight bold
    .orgPrice
        color gray
        text-decoration line-through
    .satisfy
        float right
        color gray
        font-size 12px

.m-special
    display inline-block
    width 40px
    height 20px
    line-height 20px
    background orange
    color white
    text-align center
    border-radius 5px

.m-content
    width 100%
    overflow hidden
    
    img
        margin-top 20px
        
    .m-left
        width 500px
    
    .m-right
        overflow hidden
        padding-top 20px
    .m-activity
        position relative
        height 110px
        background #FC893D
        
        .price
            font-size 30px
            font-weight bold
        
        .special
            font-size 12px
        ul
            position absolute
            top 50%
            left 40px
            transform translateY(-50%)
            li 
                color #fff
    
    .m-info
        height 52px
        line-height 52px
        padding 0px 5px
        .content
            font-size 18px
            color #f80
        ul
            width 100%
        li
            width 33%
            height 70px
            float left
            text-align center
            border-right 1px solid #ddd
            &:last-child
                border-right none
            div
                height 20px
                
    .m-detail
        width 438px
        margin 0px auto
        margin-top 20px
        padding 20px 15px
        background #f4f5f6 
        font-size 14px
        .tit 
            color #666
        .self_tour
            color #bbb           
    
    .m-buy-btn
        width 130px
        height 40px
        line-height 40px
        text-align center
        color #fff
        background #f80
        border 1px solid orangered
        font-size 18px
        font-weight bold
        margin 0px auto
        cursor pointer
    
    .m-tip
        margin 1px 10px
        height 30px
        line-height 30px
        font-size 14px
        background #f4f5f6 
        color #999
        text-align center
        em
            font-style normal
            color #f80
    
    .m-partial
        width 100%
        height 300px
        background #ddd
    
    .m-recommend
        font-size 12px
        padding-left 20px
        margin-top 20px
        .recommend
            height 20px
            font-size 14px
            font-weight bold
            color #289d47
            background url('http://img1.tuniucdn.com/img/20140324/super/ties-24.png') 0 0 no-repeat
            background-position 0px -145px
            padding-left 40px
        ul
            margin-left 10px
        li
            margin-top 10px

.form_date
    width 400px !important

.m-info-tip
    font-size 12px
    color gray

.m-information
    margin-top 20px
    border 2px solid orange 
    background #fffaf5
    
    table
        margin-left 50px
        width 600px
        font-size 12px
  
    .step1
        height 61px
        line-height 61px
        display flex
        flex-flow row
    
    .step2,.step3
        padding 20px
        background #fff
        border-top 1px solid orange
    
    .step3
        border-top 3px solid #ddd
        .content
            margin-left 50px
            .title
                font-size 12px
                font-weight bold
                color #2e9900
            .desc
                margin-top 20px
                font-size 12px
            .tip
                color #f80
       

    .item 
        position relative
        flex 1  1 0
        text-align center
    
    .m-reg-btn
        position absolute
        top 50%
        transform translateY(-50%)
        width 128px
        height 35px
        line-height 35px
        color #fff
        text-align center
        background #f80

.m-packages 
    margin-top 10px
    width 100%
    overflow hidden
    li
        float left
        width 120px
        font-size 12px
        height 40px
        line-height 40px
        text-align center
        border 1px solid #979797
        margin-left 10px

.f-left
    float left